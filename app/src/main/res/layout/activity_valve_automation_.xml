<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sealsys.ValveAutomation_Activity">



    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/rotary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pneumatic Rotary Actuator"
        android:layout_weight="1"/>

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/actuated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actuated Ball Valve Flanged Ends"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_weight="1"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/actuated_screwed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actuated Ball Valve Screwed / Socketweld"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_weight="1"/>

        <TextView
            android:id="@+id/butterfly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actuated Butterfly Valve"
            android:layout_weight="1"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/gate_valve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actuated Knife Gate Valve"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_weight="1"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/pneumatic_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pneumatic Control Valve"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
