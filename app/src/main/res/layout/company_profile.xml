<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sealsys.products"
    android:background="#F9FBE7">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="368dp"
              android:layout_height="495dp"
              tools:layout_editor_absoluteY="8dp"
              tools:layout_editor_absoluteX="8dp">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sealing system "
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold|normal"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="corporation"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold|normal"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        />

    <TextView
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22sp"
        android:layout_marginTop="40dp"
        android:id="@+id/written"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#B71C1C"
        android:text="We Sealing System Corporation are precision supplier quality products for varied from Industrial Valves, Industrial Valves Casting, and Pneumatic Valves .etc. At India and established in 1992, we have adapted to the constantly changing needs of our customers from across the world. Supplier Sealing System Corporation we remain dedicated in our efforts to provide the best products and quality that our customers have vouched for over the years."/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>